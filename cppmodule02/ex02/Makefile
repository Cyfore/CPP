NAME = Orthodox3
SRCS = *.cpp
CMP = c++
FLAGS = -Wall -Wextra -Werror

all:
	$(CMP) $(FLAGS) $(SRCS) -o $(NAME)

clean:
	rm -f $(NAME)

fclean : clean
re: fclean all